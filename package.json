{
  "name": "@teamvortexsoftware/vortex-react-provider",
  "description": "React provider for seamless Vortex integration with Next.js SDK",
  "author": "@teamvortexsoftware",
  "version": "0.0.1",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "prepack": "echo 'This package should not be published. Use publish:stg or publish:prod' && exit 1",
    "build:stg": "pnpm run distclean && pnpm run build && mkdir -p dist.d/stg && mv dist dist.d/stg && echo && echo 'Build in ./dist.d/stg'",
    "prepublish:stg": "cp ./LICENSE ./README.md ./dist.d/stg/ && jq '.name = \"@teamvortexsoftware/vortex-react-provider-stg\" | .description = \"Vortex React Provider (STG)\" | del(.scripts.prepack)' ./package.json > ./dist.d/stg/package.json",
    "publish:stg": "pnpm run prepublish:stg && npm publish --userconfig ../../.npmrc --access restricted ./dist.d/stg",
    "build:prod": "pnpm run distclean && pnpm run build && mkdir -p dist.d/prod && mv dist dist.d/prod && echo && echo 'Build in ./dist.d/prod'",
    "prepublish:prod": "cp ./LICENSE ./README.md ./dist.d/prod/ && jq 'del(.scripts.prepack)' ./package.json > ./dist.d/prod/package.json",
    "publish:prod": "pnpm run prepublish:prod && npm publish --userconfig ../../.npmrc --access public ./dist.d/prod",
    "build": "tsc",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "distclean": "rm -rf ./dist ./dist.d",
    "dev": "tsc --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "package": "pnpm run build && cd dist && npm pack"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/test/__fixtures__",
      "<rootDir>/node_modules",
      "<rootDir>/dist"
    ],
    "preset": "ts-jest"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@jest/globals": "29.7.0",
    "@teamvortexsoftware/eslint-config": "workspace:*",
    "@teamvortexsoftware/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.2.0",
    "@types/react": "18.3.23",
    "@types/react-dom": "18.3.5",
    "eslint": "^9.24.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-junit": "16.0.0",
    "ts-jest": "^29.4.3",
    "typescript-eslint": "^8.30.1"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}

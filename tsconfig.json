{
  "extends": "../typescript-config/base.json",
  "compilerOptions": {
    "lib": ["dom", "ES2015"],
    "outDir": "./dist",
    "rootDir": "src",
    "sourceMap": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "build", "node_modules"]
}
